generator client {
  provider = "prisma-client-js"
}

// Подключение к БД
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Создание таблиц
model User {
  id        Int      @id @default(autoincrement())
  fullName  String
  email     String
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Product {
  id        Int      @id @default(autoincrement())
  name      String
  inageUrl  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
